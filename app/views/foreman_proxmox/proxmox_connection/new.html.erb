<%= form_for @connection, url: create_proxmox_connection_path do |f| %>
    <%= f.label :ip %>
    <%= f.text_field :ip %>
    <br>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <br>
    <%= f.submit 'Create' %>
<% end %>
